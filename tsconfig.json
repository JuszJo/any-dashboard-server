{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "outDir": "./dist",
  },
  "include": ["./**/*.ts"],
  "exclude":["node_modules", "dist"]
}
